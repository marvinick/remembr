<%= simple_form_for(@membership, html: {class: "member-item"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :member_email, required: true, autofocus: true, label: false, placeholder: "email", input_html: {class: "form-control"} %>
    <%= f.input :amount, required: true, autofocus: true, label: false, placeholder: "Amount", input_html: {class: "form-control"} %>
    <%= f.button :submit, "Submit", class: "btn btn-primary btn-block" %>
<% end %>
