<%= simple_form_for(@item, html: {class: "form-item"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name, required: true, autofocus: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :creator, required: false, autofocus: true, label: false, placeholder: "Creator", input_html: {class: "form-control"} %>
    <%= f.input :description, required: true, autofocus: true, label: false, placeholder: "Description", input_html: {class: "form-control"} %>
    <%= f.input :price, required: true, autofocus: true, label: false, placeholder: "Price", input_html: {class: "form-control"} %>
    <%= f.input :image %>
    <%= f.input :resource %>
    <div class="checkbox text-center">
    <p>Availability</p>
    <%= f.input :availability, required: false, label: false %>
    </div>
    <%= f.button :submit, "Add Item", class: "btn btn-primary btn-block" %>
<% end %>
