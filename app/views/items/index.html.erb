<% @items.each do |item| %>
  <div class="col-sm-3 col-md-3">
    <div class="thumbnail thumb-box">
    <h4 style="text-align:center;"><%= item.name %></h4>
      <%= image_tag( item.image, size: "250x300" ) %>
      <div class="caption" style="text-align:center;">
        <%= link_to like_item_path(item),  class: "like", method: :put do %>
           <button type="button" class="btn btn-info" aria-label="Left Align">
             <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
             <span class="badge"><%= item.get_upvotes.size %></span>
           </button>
        <% end %>
        <%= link_to unlike_item_path(item), class: "like", method: :put do %>
          <button type="button" class="btn btn-info" aria-label="Left Align">
           <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
           <span class="badge"><%= item.get_downvotes.size %></span>
          </button>
        <% end %>
      </div>
    </div>
  </div>
<% end %>