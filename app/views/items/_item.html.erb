<div class="col-md-3">
  <div class="thumbnail">
    <%= link_to item_path(item) do %>
    <%= image_tag item.image.url(:original), class: "img-responsive" %>
    <% end %>
    <div class="caption">
      <h5><%= link_to item.name, item_path(item) %></h5>
      <p>$<%= item.price %></p>
    </div>
  </div>
</div>